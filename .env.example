# Environment Configuration for Peptidology WordPress Site
# Copy this file to .env and customize the values

# Database Configuration
DB_NAME=defaultdb
DB_USER=localuser
DB_PASSWORD=guest
DB_HOST=localhost

# WordPress Configuration
WP_HOME=http://peptest.local
WP_SITEURL=http://peptest.local
WP_ENVIRONMENT_TYPE=local

# WordPress Security Keys (generate at: https://api.wordpress.org/secret-key/1.1/salt/)
AUTH_KEY=your-unique-auth-key-here
SECURE_AUTH_KEY=your-unique-secure-auth-key-here
LOGGED_IN_KEY=your-unique-logged-in-key-here
NONCE_KEY=your-unique-nonce-key-here
AUTH_SALT=your-unique-auth-salt-here
SECURE_AUTH_SALT=your-unique-secure-auth-salt-here
LOGGED_IN_SALT=your-unique-logged-in-salt-here
NONCE_SALT=your-unique-nonce-salt-here

# Debug Configuration
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true

# Memory Limits
WP_MEMORY_LIMIT=1024M
WP_MAX_MEMORY_LIMIT=2048M

# Production Server Details (for syncing)
PROD_SERVER_URL=https://peptidology.co
PROD_DB_HOST=a369590-akamai-prod-6208699-default.g2a.akamaidb.net:13042
PROD_DB_NAME=defaultdb

# Local Development Paths
WAMP_PATH=c:\wamp64
SITE_PATH=c:\wamp64\www\peptidology
WP_CLI_PATH=c:\wp-cli

# File Sync Settings
UPLOADS_BACKUP_URL=https://peptidology.co/wp-content/uploads/
DATABASE_BACKUP_URL=https://peptidology.co/backups/

# License Keys (for premium plugins)
GRAVITY_FORMS_LICENSE=your-gravity-forms-license-key
ACF_PRO_LICENSE=your-acf-pro-license-key
WPMU_DEV_API_KEY=your-wpmu-dev-api-key

# Development Settings
ENABLE_QUERY_MONITOR=true
DISABLE_EMAILS=true
FORCE_SSL_ADMIN=false